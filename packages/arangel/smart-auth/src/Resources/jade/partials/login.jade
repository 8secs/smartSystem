.auth.container
    .row
        .panel.text-center
            .panel-body
                h2.text-center {{ 'LOGIN' | translate }}
                form(method='post', ng-submit='login()', name='loginForm')
                    .form-group
                        alert(ng-repeat='alert in alerts', type='{{alert.type}}', close='alert.close()') {{ alert.msg }}
                    .form-group.has-feedback
                        input.form-control.input-lg(type='text', name='email', ng-model='email', placeholder='{{"EMAIL" | translate }}', required='', autofocus='')
                        span.ion-at.form-control-feedback
                    .form-group.has-feedback
                        input.form-control.input-lg(type='password', name='password', ng-model='password', placeholder='{{"PASSWORD" | translate }}', required='')
                        span.ion-key.form-control-feedback
                    button.btn.btn-lg.btn-block.btn-success(type='submit', ng-disabled='loginForm.$invalid') {{ 'LOGIN' | translate }}
                    br
                    p.text-center
                        a(href='#', ui-sref='password') {{ 'FORGOT_PASS' | translate }}
                    p.text-center.text-muted
                        small
                            | {{ 'DONT_ACCOUNT' | translate }}
                            a(href='/#/signup') {{ 'SIGN_UP' | translate }}
                    .signup-or-separator
                        h6.text {{ 'OR' | translate }}
                        hr
                button.btn.btn-block.btn-facebook(ng-click="authenticate('facebook')")
                    i.ion-social-facebook
                    |  {{ 'SIGN_FACEBOOK' | translate }}
