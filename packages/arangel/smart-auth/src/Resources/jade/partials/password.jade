.auth.container
    .row
        .center-form.panel
            .panel-body
                h2.text-center {{ 'RESET_PASSWORD' | translate }}
                form(method='post', ng-submit='password()', name='restoreForm')
                    .form-group
                        alert(ng-repeat='alert in alerts', type='{{alert.type}}', close='alert.close()') {{ alert.msg }}
                    .form-group.has-feedback(ng-class="{ 'has-error' : restoreForm.email.$invalid && restoreForm.email.$dirty }")
                        input.form-control.input-lg(type='text', name='email', ng-model='email', placeholder='{{ "EMAIL" | translate }}', required='', autofocus='')
                        .help-block.text-danger(ng-if='restoreForm.email.$dirty', ng-messages='restoreForm.email.$error')
                            div(ng-message='required') {{ 'error.EMAIL' | translate }}
                    button.btn.btn-lg.btn-block.btn-success(type='submit', ng-disabled='restoreForm.$invalid') {{ 'SEND_PASSWORD_LINK' | translate }}
