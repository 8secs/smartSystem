nav#navbar.navbar.navbar-default.navbar-fixed-top(role='navigation')
    .container
        // Brand and toggle get grouped for better mobile display
        .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='#', ui-sref='home')
                img.img-brand.hidden-xs(ng-src='themes/{{config.activeTheme}}/assets/images/logo.png', alt='', width='70')
                img.img-brand.visible-xs(ng-src='themes/{{config.activeTheme}}/assets/images/logo.png', alt='', width='60')
        // Collect the nav links, forms, and other content for toggling
        #navbar-collapse.collapse.navbar-collapse
            ul.nav.navbar-nav
                li
                    a(ui-sref='home') {{ 'HOME' | translate}}
            ul.nav.navbar-nav.pull-right(ng-show='!isAuthenticated()')
                li.dropdown
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                        |{{currentLocale}}
                    ul.dropdown-menu(role='menu')
                        li(ng-repeat='(key, data) in sopportedLocales')
                            a(href='{{key}}') {{data.native}}
                li
                    a(ui-sref='login') {{ 'LOGIN' | translate}}
                li
                    a(ui-sref='signup') {{ 'SIGN_UP' | translate}}
            ul.nav.navbar-nav.pull-right(ng-show='isAuthenticated()')
                li.dropdown
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                        |{{currentLocale}}
                    ul.dropdown-menu(role='menu')
                        li(ng-repeat='(key, data) in sopportedLocales')
                            a(href='{{key}}') {{data.native}}
                li.dropdown
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                        img(check-image='', ng-src='{{userProfile.image}}', width='24', class='navbar-image-profile')
                        | {{userProfile.user.displayName}}
                    ul.dropdown-menu(role='menu')
                        li
                            a(ui-sref='dashboard') {{ 'DASHBOARD' | translate}}
                        li
                            a(ui-sref='logout') {{ 'LOG_OUT' | translate}}
        // /.navbar-collapse
        // /.container